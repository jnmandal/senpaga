<div class="jumbotron">
  <h1> wishlister </h1>
  <p> link to your wishlist to start the process. </p>
</div>

<% if @wishlist.errors.any? %>
  <div id="errors">
    <ul>
    <% @wishlist.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag "/wishlists" do %>
  <div class="col-lg-12">
    <div class="input-group">
      <span class="input-group-addon">http://</span>
      <%= text_field_tag :"wishlist[url]", nil, class: "form-control", placeholder: "amzn.com/w/2XPUQMFIXBR2A" %>
      <div class="input-group-btn">
        <%= submit_tag "Go", class: "btn btn-default" %>
      </div>
    </div>
  </div>
<% end  %>

