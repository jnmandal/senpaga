<p id="notice"><%= notice %></p>

<h1>User Login</h1>

<%= form_tag action: :create do %>
  <div class="form-group">
  <%= text_field_tag :"user[name]", nil, placeholder: "username", class:"form-control" %>
  </div>
  <div class="form-group">
  <%= password_field_tag :"user[password]", nil, placeholder: "password", class:"form-control" %>
  </div>
  <div class="form-group">
  <%= submit_tag "Login", class:"form-control btn btn-primary" %>
  </div>
<% end %>

